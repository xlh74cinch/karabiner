{
  "title":"Shift and Space",
  "rules":[
    {
      "description": "Change spacebar to left_shift. (Post spacebar if pressed alone)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {"key_code": "left_shift"}
          ],
          "to_if_alone": [
            {"key_code": "spacebar"}
          ]
        }
      ]
    }
  ]
}