{
  "title":"3.Edit with Eisu",
  "rules":[
    {
      "description":"3. Eisu + X,C,V to Cut,Copy,Paste",
      "manipulators":[
        {
          "type":"basic",
          "from":{
            "key_code":"x",
            "modifiers":{
              "mandatory":["right_control"],
              "optional":["caps_lock"]
            }
          },
          "to":[
            {
              "key_code":"x",
              "modifiers":["command"]
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"c",
            "modifiers":{
              "mandatory" :["right_control"],
              "optional":["caps_lock"]
            }
          },
          "to":[
            {
              "key_code":"c",
              "modifiers":["command"]
            }
          ]
        },
        {
          "type":"basic",
          "from" :{
            "key_code":"v",
            "modifiers":{
              "mandatory":["right_control"],
              "optional":["caps_lock"]
            }
          },
          "to":[
            {
            "key_code":"v",
            "modifiers":["command"]
            }
          ]
        }
      ]
    },
    {
      "description":"3. Eisu + A to Select All",
      "manipulators":[
        {
          "type":"basic",
          "from":{
            "key_code":"a",
            "modifiers":{
              "mandatory":["right_control"],
              "optional":["caps_lock"]
            }
          },
          "to":[
            {
              "key_code":"a",
              "modifiers":["command"]
            }
          ]
        }
      ]
    },
    {
      "description":"3. Eisu + M to return",
      "manipulators":[
        {
          "type":"basic",
          "from":{
            "key_code":"m",
            "modifiers":{
              "mandatory":["right_control"],
              "optional":["caps_lock"]
            }
          },
          "to":[
            {
              "key_code":"return_or_enter"
            }
          ]
        }
      ]
    },
    {
      "description":"3. Eisu + E,R to Kill line , Open Line",
      "manipulators":[
        {
          "type":"basic",
          "from":{
            "key_code":"e",
            "modifiers":{
              "mandatory":["right_control"],
              "optional":["caps_lock"]
            }
          },
          "to":[
            {
              "key_code":"right_arrow",
              "modifiers":["command","shift"]
            },
            {
              "key_code":"delete_or_backspace"
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"r",
            "modifiers":{
              "mandatory":["right_control"],
              "optional":["caps_lock"]
            }
          },
          "to":[
            {
              "key_code":"left_arrow",
              "modifiers":["command"]
            },
            {
              "key_code":"return_or_enter"
            },
            {
              "key_code":"up_arrow"
            }
          ]
        }
      ]
    },
    {
      "description":"3. Eisu + Z,B to Undo,Redo",
      "manipulators":[
        {
          "type":"basic",
          "from":{
            "key_code":"z",
            "modifiers":{
              "mandatory":["right_control"],
              "optional":["caps_lock"]
            }
          },
          "to":[
            {
              "key_code":"z",
              "modifiers":["command"]
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"b",
            "modifiers":{
              "mandatory":["right_control"],
              "optional":["caps_lock"]
            }
          },
          "to":[
            {
              "key_code":"z",
              "modifiers":[
                "command",
                "shift"
              ]
            }
          ]
        }
      ]
    },
    {
      "description":"3. Eisu + Semicolon , p to Tab , S-Tab",
      "manipulators":[
        {
          "type":"basic",
          "from":{
            "key_code":"semicolon",
            "modifiers":{
              "mandatory":["right_control"],
              "optional":["caps_lock"]
            }
          },
          "to":[
            {
              "key_code":"tab"
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"slash",
            "modifiers":{
              "mandatory":["right_control"],
              "optional":["caps_lock"]
            }
          },
          "to":[
            {
              "key_code":"tab",
              "modifiers":["shift"]
            }
          ]
        }
      ]
    },
    {
      "description":"3. Eisu + U , Kana to left , right click ",
      "manipulators":[
        {
          "type":"basic",
          "from":{
            "key_code":"u",
            "modifiers":{
              "mandatory":["right_control"],
              "optional":["caps_lock"]
            }
          },
          "to":[
            {
              "pointing_button":"button1"
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"japanese_kana",
            "modifiers":{
              "mandatory":["right_control"],
              "optional":["caps_lock"]
            }
          },
          "to":[
            {
              "pointing_button":"button2"
            }
          ]
        }
      ]
    }
  ]
}