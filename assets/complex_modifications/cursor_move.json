{
  "title":"Cursor Move",
  "rules":[
    {
      "description":"Ctrl + JKL: to L/D/U/R",
      "manipulators":[
        {
          "type":"basic",
          "from":{
            "key_code":"j",
            "modifiers":{
              "mandatory":["control"],
              "optional":[
                "shift",
                "caps_lock"
              ]
            }
          },
           "to":[
             {"key_code":"left_arrow"}
            ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"k",
            "modifiers":{
              "mandatory":["control"],
              "optional":[
                "caps_lock",
                "shift"
              ]
            }
          },
          "to":[
             {
              "key_code":"down_arrow"
              }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"l",
            "modifiers":{
              "mandatory":["control"],
              "optional":[
                "caps_lock",
                "shift"
              ]
            }
          },
          "to":[
             {
              "key_code":"up_arrow"
              }
          ]
        },
        {
          "type":"basic",
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": ["control"],
              "optional": [
                "caps_lock",
                "shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ]
        }
      ]
    },
    {
      "description":"Ctrl + a e to Home/End",
      "manipulators":[
        {
          "type":"basic",
          "from":{
            "key_code":"a",
            "modifiers":{
              "mandatory":["control"],
              "optional":[
                "caps_lock",
                "shift"
              ]
            }
          },
          "to":[
            {
              "key_code":"left_arrow",
              "modifiers":"command"
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"e",
            "modifiers":{
              "mandatory":["control"],
              "optional":[
                "caps_lock",
                "shift"
              ]
            }
          },
          "to":[
            {
              "key_code":"right_arrow",
              "modifiers":"command"
            }
          ]
        }
      ]
    },

    {
      "description":"Ctrl + r t to Down/Up",
      "manipulators":[
        {
          "type":"basic",
          "from":{
            "key_code":"r",
            "modifiers":{
              "mandatory":["control"],
              "optional":["caps_lock"]
            }
          },
          "to":[
            {
              "key_code":"down_arrow",
              "modifiers":"fn"
           } 
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"t",
            "modifiers":{
              "mandatory":["control"],
              "optional":["caps_lock"]
            }
          },
          "to":[
            {
              "key_code":"t",
              "modifiers":"fn"
            }
          ]
        }
      ]
    }
    
  ]
}
      