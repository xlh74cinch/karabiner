{
  "title":"2.Cursor Move with Esisu",
  "rules":[
    {
      "description":"2. Eisu + J,K,I,L to Left,Down,Up,Right",
      "manipulators":[
        {
          "type":"basic",
          "from":{
            "key_code":"j",
            "modifiers":{
              "mandatory":["right_control"],
              "optional":[
                "shift",
                "caps_lock",
                "option"
              ]
            }
          },
           "to":[
             {
                "key_code":"left_arrow"
              }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"k",
            "modifiers":{
              "mandatory":["right_control"],
              "optional":[
                "caps_lock",
                "shift",
                "option"
              ]
            }
          },
          "to":[
             {
              "key_code":"down_arrow"
              }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"i",
            "modifiers":{
              "mandatory":["right_control"],
              "optional":[
                "caps_lock",
                "shift",
                "option"
              ]
            }
          },
          "to":[
             {
              "key_code":"up_arrow"
              }
          ]
        },
        {
          "type":"basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": ["right_control"],
              "optional": [
                "caps_lock",
                "shift",
                "option"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ]
        }
      ]
    },
    {
      "description":"2. Eisu + U,O to Home,End (if press with Command then Top,Bottom",
      "manipulators":[
        {
          "type":"basic",
          "from":{
            "key_code":"u",
            "modifiers":{
              "mandatory":["right_control"],
              "optional":[
                "caps_lock",
                "shift",
                "option"
              ]
            }
          },
          "to":[
            {
              "key_code":"left_arrow",
              "modifiers":"command"
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"u",
            "modifiers":{
              "mandatory":[
                "right_control",
                "command"
              ],
              "optional":[
                "caps_lock",
                "shift",
                "option"
              ]
            }
          },
          "to":[
            {
              "key_code":"up_arrow",
              "modifiers":"command"
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"o",
            "modifiers":{
              "mandatory":["right_control"],
              "optional":[
                "caps_lock",
                "shift",
                "option"
              ]
            }
          },
          "to":[
            {
              "key_code":"right_arrow",
              "modifiers":"command"
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"o",
            "modifiers":{
              "mandatory":[
                "right_control",
                "command"
              ],
              "optional":[
                "caps_lock",
                "shift",
                "option"
              ]
            }
          },
          "to":[
            {
              "key_code":"down_arrow",
              "modifiers":"command"
            }
          ]
        }
      ]
    },
    {
      "description":"2. Eisu +  , , M  to Scroll Down , Scroll Up",
      "manipulators":[
        {
          "type":"basic",
          "from":{
            "key_code":"comma",
            "modifiers":{
              "mandatory":["right_control"],
              "optional":["caps_lock"]
            }
          },
          "to":[
            {
              "key_code":"down_arrow",
              "modifiers":"fn"
           } 
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"m",
            "modifiers":{
              "mandatory":["right_control"],
              "optional":["caps_lock"]
            }
          },
          "to":[
            {
              "key_code":"up_arrow",
              "modifiers":"fn"
            }
          ]
        }
      ]
    },
    {
      "description":"2. Eisu + H,D to BackSpace,Delete",
      "manipulators":[
        {
          "type":"basic",
          "from":{
            "key_code":"h",
            "modifiers":{
              "mandatory":["right_control"],
              "optional":[
                "caps_lock",
                "shift",
                "command"
              ]
            }
          },
          "to":[
            {
              "key_code":"delete_or_backspace"
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"d",
            "modifiers":{
              "mandatory":["right_control"],
              "optional":[
                "caps_lock",
                "shift",
                "option",
                "command"
              ]
            }
          },
          "to":[
            {
              "key_code":"delete_or_backspace",
              "modifiers":"fn"
            }
          ]
        }
      ]
    }
  ]
}